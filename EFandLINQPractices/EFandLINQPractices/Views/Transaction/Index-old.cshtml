@model IEnumerable<EFandLINQPractices.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Search", "Transaction"))
{
    <input type="text" id="searchtext" name="searchtext"/>
    <input type="submit" value="Search" class="btn btn-default" />
}
<input type="button" name="Group" value="Group" class="btn btn-default" />
&nbsp;
<table class="table">
    <tr>
        <th>
            <input type="radio" name="groupby" value="name"> @Html.ActionLink("Student Name", "Sort", new { field = "name" })
        </th>
        <th>
            <input type="radio" name="groupby" value="dob"> @Html.ActionLink("Student DOB", "Sort", new { field = "dob" })
        </th>
        <th>
            <input type="radio" name="groupby" value="address"> @Html.ActionLink("Student Address", "Sort", new { field = "address" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentDOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress)
        </td>
        <td style="display:none">
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentID })
        </td>
    </tr>
}

</table>
